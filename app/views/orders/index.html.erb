<div class="page-header">
  <h1>Orders
    <small>awwww yeah we're making some money!</small>
  </h1>
</div>


<div class="row table-responsive">
  <div class="col-sm-6">

    <table class="table table-striped table-bordered">
      <thead>
        <th>Order ID</th>
        <th>Date Placed</th>
        <th>Amount</th>
        <th>Product</th>
      </thead>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at.localtime.strftime("%B %d, %Y") %></td>
          <td><%= number_to_currency(order.total_amount) %></td>
          <td><%= order.product.title %></td>
        </tr>
      <% end %>
    </table>

  </div>
</div>
